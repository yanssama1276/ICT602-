<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:paddingBottom="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@drawable/bg_campus_header"
                android:background="#1565C0"
                android:scaleType="centerCrop"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="#33000000"/>

            <ImageButton
                android:id="@+id/btnFloatingBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                app:tint="#FFFFFF"
                android:contentDescription="Back"/>

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="115dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/app_logo"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SafeCampus"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#212121"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0.0 (Beta)"
            android:textSize="12sp"
            android:textColor="#757575"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Development Team"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="20dp">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:paddingBottom="12dp">
                            <ImageView android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/ic_person" app:tint="#546E7A" android:background="@drawable/ic_launcher_background" android:backgroundTint="#ECEFF1" android:padding="8dp"/>
                            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginStart="16dp">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="MUHAMMAD AIMAN HAYKAL" android:textStyle="bold" android:textColor="#212121"/>
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ID: 2023870468" android:textSize="12sp" android:textColor="#757575"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE" android:layout_marginBottom="12dp"/>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:paddingBottom="12dp">
                            <ImageView android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/ic_person" app:tint="#546E7A" android:background="@drawable/ic_launcher_background" android:backgroundTint="#ECEFF1" android:padding="8dp"/>
                            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginStart="16dp">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="AHMAD SHAHIRRAN BIN SHARIN" android:textStyle="bold" android:textColor="#212121"/>
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ID: 2023268168" android:textSize="12sp" android:textColor="#757575"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE" android:layout_marginBottom="12dp"/>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:paddingBottom="12dp">
                            <ImageView android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/ic_person" app:tint="#546E7A" android:background="@drawable/ic_launcher_background" android:backgroundTint="#ECEFF1" android:padding="8dp"/>
                            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginStart="16dp">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="AMIRUL HAZIQ BIN BADRUL HISHAM" android:textStyle="bold" android:textColor="#212121"/>
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ID: 2023657278" android:textSize="12sp" android:textColor="#757575"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE" android:layout_marginBottom="12dp"/>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:paddingBottom="12dp">
                            <ImageView android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/ic_person" app:tint="#546E7A" android:background="@drawable/ic_launcher_background" android:backgroundTint="#ECEFF1" android:padding="8dp"/>
                            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginStart="16dp">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="MUHMMAD AFIQ BIN BAHARIN" android:textStyle="bold" android:textColor="#212121"/>
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ID: 2023643338" android:textSize="12sp" android:textColor="#757575"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE" android:layout_marginBottom="12dp"/>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                            <ImageView android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/ic_person" app:tint="#546E7A" android:background="@drawable/ic_launcher_background" android:backgroundTint="#ECEFF1" android:padding="8dp"/>
                            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginStart="16dp">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="AKHMAD ZAINUL MUTTAQIN BIN MOLYADI" android:textStyle="bold" android:textColor="#212121"/>
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ID: 2023663442" android:textSize="12sp" android:textColor="#757575"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Project"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="24dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SafeCampus uses real-time GPS tracking and live incident reporting to ensure student safety."
                        android:lineSpacingExtra="4dp"
                        android:textColor="#616161"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGithub"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="24dp"
                android:text="Visit GitHub Repository"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#24292E"
                app:cornerRadius="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â© 2026 SafeCampus Team. All Rights Reserved."
                android:textSize="12sp"
                android:textColor="#BDBDBD"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>